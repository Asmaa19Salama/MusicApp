<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingRight="16dp"
        android:background="@color/colorPrimaryDark">
    <TextView
        android:id="@+id/badanamu_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badanamu"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_centerVertical= "true"
        android:textColor="@android:color/white"
        android:paddingLeft="16dp"
        />

        <Button
            android:id="@+id/badanamu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's see :)"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:paddingRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingRight="16dp"
        android:background="@color/colorAccent">
    <TextView
        android:id="@+id/disney_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disney"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:paddingLeft="16dp"
        android:layout_centerVertical= "true"
    />
        <Button
            android:id="@+id/disney_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's see :)"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:paddingRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>
